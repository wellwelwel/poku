{
  "include": ["src"],
  "exclude": ["test"],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "lib"
  }
}
